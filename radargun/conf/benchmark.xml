<bench-config>
   <master
         bindAddress="${127.0.0.1:master.address}"
         port="${21032:master.port}"/>
   <benchmark
         initSize="${10:Islaves}"
         maxSize="${10:slaves}"
         increment="1">
      <DestroyWrapper
            runOnAllSlaves="true"/>
      <StartCluster
            staggerSlaveStartup="true"
            delayAfterFirstSlaveStarts="5000"
            delayBetweenStartingSlaves="1000"/>
      <ClusterValidation
            passiveReplication="false"
            partialReplication="true"/>
      <TpccPopulation
            preloadedFromDB="false"
            numWarehouses="10"
            cLastMask="0"
            olIdMask="0"
            cIdMask="0"
            threadParallelLoad="true"
            batchLevel="25"
            numLoaderThreads="4"/>
      <CacheSize
            statName="CACHE_SIZE_BEFORE_BENCH" />
      <TpccBenchmark
            statsSamplingInterval="0"
            numOfThreads="2"
            perThreadSimulTime="2000"
            arrivalRate="0"
            localityProbability="100"
            accessSameWarehouse="true"
            paymentWeight="0"
            warehouseOffset="1"
            orderStatusWeight="100"/>
      <CacheSize
            statName="CACHE_SIZE_AFTER_BENCH" />
      <CsvReportGeneration/>
      <TpccBenchmark
            statsSamplingInterval="0"
            numOfThreads="2"
            perThreadSimulTime="2000"
            arrivalRate="0"
            localityProbability="100"
            accessSameWarehouse="true"
            warehouseOffset="2"
            paymentWeight="0"
            orderStatusWeight="100"/>
      <CacheSize
            statName="CACHE_SIZE_AFTER_BENCH" />
      <CsvReportGeneration/>
   </benchmark>
   <products>
      <infinispan4>
         <config name="ispn.xml"/>
      </infinispan4>
   </products>
   <reports>
      <report name="Reports" />
   </reports>
</bench-config>
